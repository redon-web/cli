{
  "name": "@redon-web/cli",
  "version": "0.2.0",
  "description": "redon-web command lint tools",
  "author": {
    "name": "Redon",
    "email": "chenzhaoyu1994@gmail.com",
    "url": "https://github.com/chanzhaoyu"
  },
  "license": "MIT",
  "homepage": "https://github.com/redon-web/cli",
  "repository": {
    "url": "https://github.com/redon-web/cli.git"
  },
  "bugs": {
    "url": "https://github.com/redon-web/cli/issues"
  },
  "bin": {
    "redon": "dist/index.mjs",
    "rd": "dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "lint": "eslint . --fix",
    "commit": "rd git-commit",
    "cleanup": "rd cleanup",
    "update-pkg": "rd update-pkg",
    "update-version": "bumpp package.json",
    "publish-pkg": "pnpm -r publish --access public",
    "release": "pnpm update-version && pnpm publish-pkg"
  },
  "dependencies": {
    "commander": "^9.4.1",
    "execa": "5.1.1",
    "kolorist": "^1.6.0",
    "minimist": "^1.2.7",
    "npm-check-updates": "^16.6.2",
    "prompts": "^2.4.2",
    "rimraf": "^3.0.2",
    "zx": "^7.1.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.35.1",
    "@redon-web/cli": "workspace:*",
    "@types/prompts": "^2.4.2",
    "bumpp": "^8.2.1",
    "eslint": "^8.31.0",
    "esno": "^0.16.3",
    "lint-staged": "^13.1.0",
    "simple-git-hooks": "^2.8.1",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm redon git-commit-verify",
    "pre-commit": "pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "*": [
      "eslint . --fix"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
